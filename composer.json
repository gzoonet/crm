{
    "name": "gzoonet/crm",
    "description": "A comprehensive CRM plugin for Filament 3.",
    "type": "library",
    "license": "None",
    "authors": [
        {
            "name": "GZOO Media",
            "email": "eddy@gzoo.net"
        }
    ],
    "require": {
        "php": "^8.1",
        "filament/filament": "^3.0",
        "laravel/framework": "^10.0|^11.0",
        "spatie/laravel-package-tools": "^1.16"
    },
    "autoload": {
        "psr-4": {
            "Gzoonet\\Crm\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Gzoonet\\Crm\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Gzoonet\\Crm\\CrmPackageServiceProvider"
            ],
            "aliases": {
                "CrmPackage": "Gzoonet\\Crm\\Facades\\CrmPackage"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    }
}
