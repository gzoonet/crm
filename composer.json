{
    "name": "your-vendor/crm-package",
    "description": "A comprehensive CRM plugin for Filament 3.",
    "type": "laravel-package",
    "license": "MIT",
    "authors": [
        {
            "name": "Manus AI",
            "email": "manus@example.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "filament/filament": "^3.0",
        "laravel/framework": "^10.0|^11.0",
        "spatie/laravel-package-tools": "^1.16"
    },
    "autoload": {
        "psr-4": {
            "YourVendor\\CrmPackage\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "YourVendor\\CrmPackage\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "YourVendor\\CrmPackage\\CrmPackageServiceProvider"
            ],
            "aliases": {
                "CrmPackage": "YourVendor\\CrmPackage\\Facades\\CrmPackage"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    }
}

